{
    "name": "react-dsfr-tiptap",
    "version": "1.0.0",
    "description": "React Tiptap component for dsfr design system",
    "license": "MIT",
    "homepage": "https://github.com/IGNF/react-dsfr-tiptap",
    "repository": {
        "type": "git",
        "url": "git@github.com:IGNF/react-dsfr-tiptap.git"
    },
    "bugs": {
        "url": "https://github.com/IGNF/react-dsfr-tiptap/issues"
    },
    "keywords": [
        "dsfr",
        "design system",
        "react",
        "typescript",
        "tiptap"
    ],
    "type": "module",
    "main": "./dist/index.js",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "import": {
                "import": "./dist/index.js",
                "types": "./dist/index.d.ts"
            },
            "require": {
                "require": "./dist/index.cjs",
                "types": "./dist/index.d.cts"
            }
        },
        "./dialog": {
            "import": {
                "import": "./dist/dialog.js",
                "types": "./dist/dialog.d.ts"
            },
            "require": {
                "require": "./dist/dialog.cjs",
                "types": "./dist/dialog.d.cts"
            }
        },
        "./markdown": {
            "import": {
                "import": "./dist/markdown.js",
                "types": "./dist/markdown.d.ts"
            },
            "require": {
                "require": "./dist/markdown.cjs",
                "types": "./dist/markdown.d.cts"
            }
        }
    },
    "files": [
        "dist"
    ],
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsup src/index.ts src/dialog.ts src/markdown.ts --format cjs,esm --dts --clean",
        "test": "jest",
        "prepublishOnly": "npm run build",
        "check-types": "tsc --noEmit",
        "check-exports": "attw --pack .",
        "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'docs: update CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
        "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'docs: update CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
        "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'docs: update CHANGELOG.md' && npm version major && git push origin && git push origin --tags"
    },
    "dependencies": {
        "@tiptap/pm": "^2.10.4",
        "@tiptap/react": "^2.10.4",
        "@tiptap/starter-kit": "^2.10.4"
    },
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.17.1",
        "@jest/globals": "^29.7.0",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@tiptap/extension-color": "^2.10.4",
        "@tiptap/extension-image": "^2.10.4",
        "@tiptap/extension-link": "^2.10.4",
        "@tiptap/extension-youtube": "^2.10.4",
        "@types/jest": "^29.5.14",
        "@types/react": "^18.3.17",
        "@types/react-dom": "^18.3.5",
        "generate-changelog": "^1.8.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "tiptap-markdown": "^0.8.10",
        "ts-jest": "^29.2.5",
        "tsup": "^8.3.5",
        "typescript": "~5.6.2"
    },
    "peerDependencies": {
        "@codegouvfr/react-dsfr": "^1.16.4",
        "@hookform/resolvers": "^3.9.1",
        "@tiptap/extension-color": "^2.10.4",
        "@tiptap/extension-highlight": "^2.10.4",
        "@tiptap/extension-image": "^2.10.4",
        "@tiptap/extension-link": "^2.10.4",
        "@tiptap/extension-subscript": "^2.10.4",
        "@tiptap/extension-superscript": "^2.10.4",
        "@tiptap/extension-text-align": "^2.10.4",
        "@tiptap/extension-text-style": "^2.10.4",
        "@tiptap/extension-underline": "^2.10.4",
        "@tiptap/extension-youtube": "^2.10.4",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hook-form": "^7.54.1",
        "tiptap-markdown": "^0.8.10",
        "tss-react": "^4.9.14",
        "validator": "^13.12.0",
        "yup": "^1.6.1"
    },
    "peerDependenciesMeta": {
        "@hookform/resolvers": {
            "optional": true
        },
        "@tiptap/extension-color": {
            "optional": true
        },
        "@tiptap/extension-highlight": {
            "optional": true
        },
        "@tiptap/extension-image": {
            "optional": true
        },
        "@tiptap/extension-link": {
            "optional": true
        },
        "@tiptap/extension-subscript": {
            "optional": true
        },
        "@tiptap/extension-superscript": {
            "optional": true
        },
        "@tiptap/extension-text-align": {
            "optional": true
        },
        "@tiptap/extension-text-style": {
            "optional": true
        },
        "@tiptap/extension-underline": {
            "optional": true
        },
        "@tiptap/extension-youtube": {
            "optional": true
        },
        "react-hook-form": {
            "optional": true
        },
        "tiptap-markdown": {
            "optional": true
        },
        "validator": {
            "optional": true
        },
        "yup": {
            "optional": true
        }
    },
    "engines": {
        "node": ">=20"
    }
}

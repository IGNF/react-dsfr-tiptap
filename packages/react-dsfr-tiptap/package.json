{
    "name": "react-dsfr-tiptap",
    "private": true,
    "version": "0.0.0",
    "description": "React Tiptap component for dsfr design system",
    "license": "MIT",
    "workspaces": [
        "examples",
        "packages/*"
    ],
    "homepage": "https://github.com/IGNF/react-dsfr-tiptap",
    "repository": {
        "type": "git",
        "url": "git@github.com:IGNF/react-dsfr-tiptap.git"
    },
    "bugs": {
        "url": "https://github.com/IGNF/react-dsfr-tiptap/issues"
    },
    "keywords": [
        "dsfr",
        "design system",
        "react",
        "typescript",
        "tiptap"
    ],
    "type": "module",
    "main": "./dist/index.js",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "import": {
                "import": "./dist/index.js",
                "types": "./dist/index.d.ts"
            },
            "require": {
                "require": "./dist/index.cjs",
                "types": "./dist/index.d.cts"
            }
        }
    },
    "files": [
        "dist"
    ],
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts --clean --sourcemap",
        "prepublishOnly": "npm run build",
        "check-types": "tsc --noEmit",
        "check-exports": "attw --pack ."
    },
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.17.1",
        "tsup": "^8.3.5",
        "typescript": "^5.6.2"
    },
    "engines": {
        "node": ">=20"
    }
}

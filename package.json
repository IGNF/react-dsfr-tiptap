{
    "name": "react-dsfr-tiptap-monorepo",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "workspaces": [
        "examples",
        "packages/*"
    ],
    "scripts": {
        "build": "npm run build -w packages/react-dsfr-tiptap",
        "build:examples": "npm run build --w examples",
        "test": "npm run test -w packages/react-dsfr-tiptap",
        "examples": "npm run dev -w examples",
        "prepare": "husky",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "check-types": "npm run check-types --ws"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "^19.6.0",
        "@eslint/compat": "^1.2.4",
        "@eslint/js": "^9.17.0",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.16",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.11",
        "prettier": "^3.4.2",
        "typescript": "~5.6.2",
        "typescript-eslint": "^8.18.1"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "*": "prettier --write --ignore-unknown",
        "*.{js,ts,jsx,tsx}": "eslint"
    }
}
